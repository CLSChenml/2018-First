<view class="page">
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="item.key">
                <navigator url="func/func?id={{item.key}}" class="weui-grid" hover-class="weui-grid_active">
                    <view class="weui-grid__label">{{item.abbr}}</view>
                    <view class="weui-grid__label" style="font-size: 12px;">{{item.name}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>